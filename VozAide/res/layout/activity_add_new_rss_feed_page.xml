<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.project.vozaide.AddNewRssFeedPage" >

    <TextView
        android:id="@+id/lblAddNewRssFeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/addLink"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTextURL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblAddNewRssFeed"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lblAddNewRssFeed"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Add rss feed here..."
        android:text="http://www.thetimes.co.uk/tto/news/rss" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnGetRssFeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/editTextURL"
        android:layout_below="@+id/editTextURL"
        android:layout_marginTop="32dp"
        android:onClick="saveRssFeedPage"
        android:text="Get Rss Feed" />

</RelativeLayout>
