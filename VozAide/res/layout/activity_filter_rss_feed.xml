<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.project.vozaide.FilterRssFeed" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewFilterPageStatus"
             android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:gravity="center"
            android:text="Status: Silent"
            android:textColor="#2EFE2E" />

        <ListView
            android:id="@+id/listFields"
            android:layout_width="match_parent"
            android:layout_height="188dp" >
        </ListView>

        <TextView
            android:id="@+id/textViewAddNewField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Field"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/editTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Field" />

        <EditText
            android:id="@+id/editTextFieldKeywrds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Keywords seperated by commas" />

        <Button
            android:id="@+id/btnSaveField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Field" 
            android:onClick="addField"/>

    </LinearLayout>

</RelativeLayout>